# Production Environment Variables Template
# Copy this file and rename to .env for production deployment

# ====================================
# PRODUCTION CONFIGURATION
# ====================================

NODE_ENV=production
PORT=10000

# ====================================
# DATABASE - PRODUCTION
# ====================================

# MongoDB Atlas or Production MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/forage-stores?retryWrites=true&w=majority

# ====================================
# SECURITY - PRODUCTION
# ====================================

# Strong JWT Secret (Generate with: openssl rand -base64 64)
JWT_SECRET=CHANGE_THIS_TO_A_VERY_STRONG_SECRET_IN_PRODUCTION
JWT_EXPIRES_IN=7d

# Strong Admin Password
ADMIN_PASSWORD=CHANGE_THIS_TO_A_VERY_STRONG_ADMIN_PASSWORD

# ====================================
# PAYMENT GATEWAYS - PRODUCTION
# ====================================

# Paystack Production Keys
PAYSTACK_SECRET_KEY=sk_live_your_paystack_live_secret_key
PAYSTACK_PUBLIC_KEY=pk_live_your_paystack_live_public_key

# Flutterwave Production Keys
FLUTTERWAVE_SECRET_KEY=FLWSECK-your_flutterwave_live_secret_key
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK-your_flutterwave_live_public_key

# ====================================
# EMAIL - PRODUCTION
# ====================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=production-email@your-domain.com
SMTP_PASS=your-production-email-app-password
MAIL_FROM=noreply@your-domain.com

# ====================================
# URLS - PRODUCTION
# ====================================

FRONTEND_URL=https://your-frontend-domain.com
BACKEND_URL=https://your-backend-domain.onrender.com
CORS_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# ====================================
# CACHING - PRODUCTION
# ====================================

# Redis URL (if using Redis)
REDIS_URL=redis://username:password@host:port

# ====================================
# LOGGING - PRODUCTION
# ====================================

LOG_LEVEL=info
LOGGING_ENABLED=true
ENABLE_SWAGGER=false

# ====================================
# PERFORMANCE - PRODUCTION
# ====================================

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ====================================
# MONITORING - PRODUCTION
# ====================================

# Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# ====================================
# BACKUP - PRODUCTION
# ====================================

BACKUP_MONGODB_URI=mongodb+srv://backup-user:password@backup-cluster.mongodb.net/
BACKUP_SCHEDULE=0 2 * * *

# ====================================
# SSL/TLS - PRODUCTION
# ====================================

SSL_CERT_PATH=/path/to/certificate.crt
SSL_KEY_PATH=/path/to/private.key
