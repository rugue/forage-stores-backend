# ====================================
# FORAGE STORES BACKEND CONFIGURATION
# ====================================

# Application Configuration
PORT=3000
NODE_ENV=development

# ====================================
# DATABASE CONFIGURATION
# ====================================

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/forage-stores
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/forage-stores

# ====================================
# AUTHENTICATION & SECURITY
# ====================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Admin Configuration
ADMIN_PASSWORD=AdminSecure123!

# ====================================
# EXTERNAL SERVICES
# ====================================

# Payment Gateway - Paystack
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key

# Payment Gateway - Flutterwave
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your_flutterwave_secret_key
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your_flutterwave_public_key

# ====================================
# EMAIL CONFIGURATION
# ====================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
MAIL_FROM=noreply@forage-stores.com

# ====================================
# CLIENT CONFIGURATION
# ====================================

# Frontend URLs
FRONTEND_URL=http://localhost:3001
BACKEND_URL=http://localhost:3000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ====================================
# CACHING & STORAGE
# ====================================

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# ====================================
# LOGGING & MONITORING
# ====================================

# Logging Configuration
LOG_LEVEL=debug
LOGGING_ENABLED=true

# API Documentation
ENABLE_SWAGGER=true

# ====================================
# DEVELOPMENT/TESTING
# ====================================

# Development Mail Settings
MAIL_ENABLED=false

# Test Database (for running tests)
TEST_MONGODB_URI=mongodb://localhost:27017/forage-test

# ====================================
# PRODUCTION ONLY
# ====================================

# SSL Configuration (Production)
SSL_CERT_PATH=
SSL_KEY_PATH=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-key

# Monitoring & Analytics
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Database Backup
BACKUP_MONGODB_URI=
BACKUP_SCHEDULE=0 2 * * *


