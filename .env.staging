# Staging Environment Variables
# Copy this file and rename to .env for staging deployment

# ====================================
# STAGING CONFIGURATION
# ====================================

NODE_ENV=staging
PORT=10000

# ====================================
# DATABASE - STAGING
# ====================================

# MongoDB for Staging
MONGODB_URI=mongodb+srv://staging-user:password@staging-cluster.mongodb.net/forage-stores-staging

# ====================================
# SECURITY - STAGING
# ====================================

# JWT Configuration for Staging
JWT_SECRET=staging-jwt-secret-key-not-for-production
JWT_EXPIRES_IN=1h

# Admin Password for Staging
ADMIN_PASSWORD=StagingAdmin123!

# ====================================
# PAYMENT GATEWAYS - STAGING (TEST KEYS)
# ====================================

# Paystack Test Keys
PAYSTACK_SECRET_KEY=sk_test_your_paystack_test_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_test_public_key

# Flutterwave Test Keys
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your_flutterwave_test_secret_key
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your_flutterwave_test_public_key

# ====================================
# EMAIL - STAGING
# ====================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=staging-email@your-domain.com
SMTP_PASS=staging-email-app-password
MAIL_FROM=staging-noreply@your-domain.com

# ====================================
# URLS - STAGING
# ====================================

FRONTEND_URL=https://your-frontend-staging.onrender.com
BACKEND_URL=https://your-backend-staging.onrender.com
CORS_ORIGINS=https://your-frontend-staging.onrender.com

# ====================================
# LOGGING - STAGING
# ====================================

LOG_LEVEL=debug
LOGGING_ENABLED=true
ENABLE_SWAGGER=true

# ====================================
# DEVELOPMENT FEATURES - STAGING
# ====================================

# Enable mail for testing
MAIL_ENABLED=true

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting (More relaxed for testing)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
